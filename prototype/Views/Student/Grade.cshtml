@{
    ViewBag.Title = "- Enrollment";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container" id="main-container">
    <div id="content-form" class="p-md-5 p-3 mt-3">
        @await Html.PartialAsync("_LogoutModal")
        <div class="progress" role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 68%"></div>
        </div>
        <h1 class="mt-3">Student Enlistment Form</h1>
        <hr class="divider">

        <form asp-action="InputReview" method="post">
            <div class="container text-center">
                <!-- Table Header Row -->
                <div class="row row-cols-1 row-cols-md-5">
                    <div class="col">
                        <p class="fw-bold">Subject/Courses</p>
                    </div>
                    <div class="col">
                        <p class="fw-bold">Remarks</p>
                    </div>
                    <div class="col">
                        <p class="fw-bold">No. of Units</p>
                    </div>
                    <div class="col">
                        <p class="fw-bold">Last Semestral Grade</p>
                    </div>
                    <div class="col"></div>
                </div>
                <!-- Input Row -->
                <div class="row row-cols-1 row-cols-md-5 align-items-center mt-2">
                    <div class="col mb-2 mb-md-0">
                        <input type="text" class="form-control">
                    </div>
                    <div class="col mb-2 mb-md-0">
                        <input type="text" class="form-control">
                    </div>
                    <div class="col mb-2 mb-md-0">
                        <input type="text" class="form-control">
                    </div>
                    <div class="col mb-2 mb-md-0">
                        <input type="text" class="form-control">
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-success">Add</button>
                    </div>
                </div>
            </div>

            <!-- Total Units and GWA Section -->
            <div class="container text-center mt-4" style="max-width: 100%; width: 100%; max-width: 400px;">
                <div class="row row-cols-1 row-cols-md-2">
                    <div class="col mb-3">
                        <p class="fw-bold">Total No. of Units</p>
                    </div>
                    <div class="col mb-3">
                        <input type="text" name="" id="" class="form-control">
                    </div>
                    <div class="col mb-3">
                        <p class="fw-bold">GWA</p>
                    </div>
                    <div class="col">
                        <input type="text" name="" id="" class="form-control">
                    </div>
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <button class="btn next text-white" id="previousButton" type="button"><i class="fa-solid fa-chevron-left"></i> Previous</button>
                <button class="btn next text-white" type="submit">Next <i class="fa-solid fa-chevron-right"></i></button>
            </div>
        </form>
    </div>
</div>
