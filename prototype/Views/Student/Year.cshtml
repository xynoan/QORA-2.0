@{
    ViewBag.Title = "- Enrollment";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container" id="main-container">
    <div id="content-form" class="p-md-5 p-3 mt-3">
        @await Html.PartialAsync("_LogoutModal")
        <div class="progress" role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 34%"></div>
        </div>
        <h1 class="mt-3">Student Enlistment Form</h1>
        <hr class="divider">
        <form asp-action="Program" method="post">
            <div class="mx-auto" style="max-width: 500px; text-align: center;">
                <div class="d-flex flex-column flex-md-row justify-content-md-between mb-3 mx-auto align-items-center" style="max-width: 600px;">
                    <div class="mb-2 mb-md-0" style="width: 100%; max-width: 45%;">
                        <p class="fw-bold">YEAR LEVEL</p>
                        <input type="text" name="" id="" class="form-control">
                    </div>
                    <div style="width: 100%; max-width: 45%;">
                        <p class="fw-bold">TERM</p>
                        <input type="text" name="" id="" class="form-control">
                    </div>
                </div>
                <p class="fw-bold">ACADEMIC YEAR</p>
                <div class="d-flex flex-column flex-md-row justify-content-md-between align-items-center mb-3">
                    <div style="width: 100%; max-width: 45%;" class="mb-2 mb-md-0">
                        <input type="text" name="" id="" class="form-control">
                    </div>
                    <span class="fw-bold">TO</span>
                    <div style="width: 100%; max-width: 45%;">
                        <input type="text" name="" id="" class="form-control">
                    </div>
                </div>
                <p>Are you applying as</p>
                <div class="d-flex flex-column align-items-center gap-1 justify-content-center">
                    <div class="input-group">
                        <input type="radio" name="applying_as" id="REGULAR">
                        <label for="REGULAR" class="fw-bold ms-2">REGULAR</label>
                    </div>
                    <div class="input-group">
                        <input type="radio" name="applying_as" id="TRANSFEREE">
                        <label for="TRANSFEREE" class="fw-bold ms-2">TRANSFEREE</label>
                    </div>
                    <div class="input-group">
                        <input type="radio" name="applying_as" id="SHIFTEE">
                        <label for="SHIFTEE" class="fw-bold ms-2">SHIFTEE</label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between mt-4">
                <button class="btn next text-white" id="previousButton" type="button"><i class="fa-solid fa-chevron-left"></i> Previous</button>
                <button class="btn next text-white" type="submit">Next <i class="fa-solid fa-chevron-right"></i></button>
            </div>
        </form>
    </div>
</div>
