@{
    ViewBag.Title = "- Enrollment";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container" id="main-container">
    <div id="content-form" class="p-md-5 p-3 mt-3">
        <!-- Logout Modal or equivalent -->
        @* Include logout modal, implement as partial view *@
        @await Html.PartialAsync("_LogoutModal")

        <!-- Progress bar -->
        <div class="progress" role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 17%"></div>
        </div>

        <h1 class="mt-3">Student Enlistment Form</h1>
        <hr class="divider">

        <!-- Form for image upload and directions -->
        <div class="d-flex flex-column flex-md-row justify-content-md-evenly align-items-center gap-4">
            <form asp-action="Year" method="post" enctype="multipart/form-data" class="d-flex flex-column align-items-center gap-3">
                <div id="image-container" class="square border border-3 border-grey d-flex flex-column justify-content-center align-items-center">
                    <input type="file" id="actual-btn" name="UploadedImage" hidden />
                    <label for="actual-btn">
                        <i class="fa-solid fa-cloud-arrow-up" style="opacity: 0.5; font-size: 100px;"></i>
                    </label>
                    <span class="text-center mt-2" style="color: grey; width: 150px;">
                        <b>Click to upload</b> or drag and drop
                    </span>
                </div>
                <a href="#" class="text-black">
                    <label for="actual-btn" class="text-decoration-underline" style="cursor: pointer;">Change</label>
                </a>
                <button type="submit" class="btn text-white rounded-4" id="submitImage">SUBMIT</button>
            </form>

            <!-- Directions -->
            <div class="text-center text-md-start">
                <h2 class="text-uppercase">Directions:</h2>
                <p>1. Please upload your <b>recent</b> image.</p>
                <p>2. Image should be <b>clear</b> and <b>high-resolution</b>.</p>
                <p>3. The background should be <b>white</b>.</p>
                <p>4. Accepted formats include JPEG, PNG, and GIF.</p>
                <p>5. Ensure the file size does not exceed <b>100MB</b>.</p>
            </div>
        </div>
    </div>
</div>
