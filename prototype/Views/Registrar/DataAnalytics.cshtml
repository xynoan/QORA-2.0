@{
    ViewBag.Title = "- Registrar";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container" id="main-container">
    <div class="dashboard">
        <!-- Metrics -->
        <div class="metrics">
            <div class="metric">
                <h2>1.23k</h2>
                <p>Total Students</p>
            </div>
            <div class="metric">
                <h2>2.32k</h2>
                <p>Pending Students</p>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="charts">
            <!-- Bar Chart -->
            <div class="bar-chart">
                <h3>Student Enrollees</h3>
                <div class="chart">
                    <!-- Sample bars -->
                    <div class="bar">
                        <div class="current-year" style="height: 120px;"></div>
                        <div class="previous-year" style="height: 100px;"></div>
                        <p>First Year</p>
                    </div>
                    <div class="bar">
                        <div class="current-year" style="height: 100px;"></div>
                        <div class="previous-year" style="height: 90px;"></div>
                        <p>Second Year</p>
                    </div>
                    <div class="bar">
                        <div class="current-year" style="height: 90px;"></div>
                        <div class="previous-year" style="height: 80px;"></div>
                        <p>Third Year</p>
                    </div>
                    <div class="bar">
                        <div class="current-year" style="height: 110px;"></div>
                        <div class="previous-year" style="height: 85px;"></div>
                        <p>Fourth Year</p>
                    </div>
                </div>
                <p class="academic-year">Academic Year 2023 - 2024</p>
            </div>

            <!-- Pie Chart -->
            <div class="pie-chart">
                <h3>Overall Programs</h3>
                <div class="chart-container">
                    <div class="pie"></div>
                </div>
                <ul class="legend">
                    <li><span class="dot blue"></span> College of Education</li>
                    <li><span class="dot orange"></span> College of Business</li>
                    <li><span class="dot yellow"></span> College of Engineering</li>
                    <li><span class="dot gray"></span> College of Computer Studies</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center mt-3 gap-2">
        <a href="@Url.Action("Index")" style="transform: rotate(180deg)">
            <img src="~/images/Right-Chevron-Outline-Icon-Graphics-29549986-1.jpg" height="50" />
        </a>
        <div style="width: 30px; height: 30px; border-radius: 50%; background-color: #102c39;">
        </div>
        <div style="width: 40px; height: 40px; border-radius: 50%; background-color: #1c465c;">
        </div>
    </div>
</div>
