@{
    ViewBag.Title = "- Registrar";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container" id="main-container">
    <h1 class="text-center fs-2 mb-3" style="color: var(--main-color);">Enrolled Schedule for AY [date]/[ ] Sem</h1>

    <div class="border border-black border-2">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center p-3">
            <span class="mb-2 mb-md-0">Roxas, Mark Joseph - StudNo - IT.pdf</span>

            <!-- Zoom Controls -->
            <div class="d-flex align-items-center zoom gap-2 mb-2 mb-md-0">
                <i class="fa-solid fa-minus"></i>
                <i class="fa-solid fa-plus"></i>
            </div>

            <!-- Print and Email Controls -->
            <div class="d-flex align-items-center gap-3">
                <div><i class="fa-solid fa-print"></i> <span>Print</span></div>
                <div><i class="fa-solid fa-envelope"></i> <span>Email</span></div>
            </div>
        </div>

        <!-- Image and Next Button -->
        <div style="background-color: grey;" class="p-3">
            <img src="/images/Reg-Form.png" alt="regform" class="d-block mx-auto my-auto img-fluid" style="max-height: 500px;">
            <p class="text-end mt-3">
                <a href="@Url.Action("Index")" class="text-white text-decoration-none black-on-hover p-2 rounded-3" style="background-color: var(--main-color);">Next Student</a>
            </p>
        </div>
    </div>
</div>
