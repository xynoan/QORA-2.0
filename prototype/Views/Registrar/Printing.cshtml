    line-height: 1.5;
}

.header .text-end {
    text-align: right;
    font-size: 14px;
}

.header .text-end div {
    margin-top: 5px;
    width: 150px;
    height: 50px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Form fields below header */
.form-fields {
    margin-top: 20px;
}

.form-fields label {
    font-size: 14px;
    font-weight: bold;
}

.form-fields input {
    font-size: 14px;
    padding: 5px;
}

.form-fields small {
    font-size: 12px;
    display: block;
    margin-top: 3px;
}

.row {
    margin-bottom: 10px;
}

.col-md-3, .col-md-4 {
    padding-right: 10px;
}


    .header .text-center h3,
    .header .text-center h4,
    .header .text-center p {
        font-size: 12px;
    }

    .form-fields label {
        font-size: 12px;
    }


    #registrationForm .table-bordered th,
