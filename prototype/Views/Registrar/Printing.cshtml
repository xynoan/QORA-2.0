        padding: 5px;
    }

    #registrationForm h5 {
        font-size: 14px;
    }
        #registrationForm .footer {
        margin-top: 20px;
        text-align: center;
        font-size: 14px;
    }

    .next-student-link {
        margin-top: 20px;
        text-align: end;
    }

        .next-student-link a {
            background-color: var(--main-color, #444);
            color: #fff;
            text-decoration: none;
            padding: 8px 12px;
            border-radius: 5px;
        }

            .next-student-link a:hover {
