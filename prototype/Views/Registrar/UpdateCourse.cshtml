@{
    ViewBag.Title = "- Registrar";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container" id="main-container">
    <!-- Search and Time Display -->
    <div class="row gap-3 mb-3">
        <!-- Search Input Group -->
        <div class="col-12 col-md-7">
            <div class="input-group border border-black p-3 rounded-4">
                <i class="fa-solid fa-magnifying-glass mt-3 ms-3 me-3" style="font-size: 25px; color: grey;"></i>
                <input type="search" name="" placeholder="241CS-IT30001" class="form-control">
                <button id="submit" type="submit" style="background-color: var(--main-color);" class="text-white rounded-end-4 p-3">Search</button>
            </div>
        </div>

        <!-- Time Display -->
        <div class="col-12 col-md-5">
            <div class="d-flex text-white rounded-4 p-3 align-items-center justify-content-center" style="background-color: var(--main-color);">
                <p class="fw-bold fs-3 m-0">2:30<span class="fw-normal" style="vertical-align: super; font-size: 13px;">45</span>PM</p>
                <div class="ms-3 text-center">
                    <p class="m-0">Work Time</p>
                    <p style="font-size: 10px;" class="m-0">
                        Saturday, March 2, 2024 (GMT+8) <br>
                        Time in Manila, Metro Manila
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Section -->
    <div id="content-form" class="p-md-5 p-3 mt-3">
        @await Html.PartialAsync("_LogoutModal")

        <div class="row gap-5">
            <!-- Left Section: Table and Controls -->
            <div class="col-12 col-lg-6">
                <div class="d-flex flex-wrap gap-3 mb-3">
                    <div style="background-color: var(--main-color);" class="rounded-4 text-white p-2 text-center flex-fill">
                        <span class="fs-4 fw-bold">563</span>
                        <p class="m-0">Pending Students</p>
                    </div>
                    <div style="background-color: var(--secondary-color);" class="rounded-4 text-white p-2 text-center flex-fill">
                        <span class="fs-4 fw-bold">43</span>
                        <p class="m-0">Total Students</p>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <a href="@Url.Action("AddCourse")" class="text-black"><i class="fa-solid fa-plus border border-black p-2 rounded-3 mainColorHover" style="width: 32px; cursor: pointer;"></i></a>
                        <span style="font-size: 12px;">ADD COURSES</span>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <i class="fa-regular fa-pen-to-square border border-black p-2 rounded-3 mainColorHover" style="width: 32px; cursor: pointer;"></i>
                        <span style="font-size: 12px;">UPDATE COURSES</span>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <i class="fa-regular fa-trash-can border border-black p-2 rounded-3 mainColorHover" style="width: 32px; cursor: pointer;"></i>
                        <span style="font-size: 12px;">DELETE COURSES</span>
                    </div>
                </div>

                <!-- Table -->
                <div class="table-responsive">
                    <table class="table mt-4">
                        <thead>
                            <tr>
                                <th scope="col">Code</th>
                                <th scope="col">Section-Subject</th>
                                <th scope="col">Unit</th>
                                <th scope="col">Days</th>
                                <th scope="col">Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>SOCSCI2</td>
                                <td>SBIT2D-Readings in the Philippines History</td>
                                <td>3</td>
                                <td>F</td>
                                <td>11:00AM-2:00PM</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <p class="text-end"><a href="@Url.Action("Printing")" class="text-decoration-none text-white p-2 rounded-3 black-on-hover" style="background-color: var(--main-color);">Proceed ></a></p>
            </div>

            <!-- Right Section: Form -->
            <div class="col-12 col-lg-6">
                <div class="border border-black rounded-3 p-3">
                    <div class="border border-black">
                        <div class="d-flex justify-content-between align-items-center text-white p-3" style="background-color: var(--main-color);">
                            <p class="fs-4 fw-bold m-0">UPDATE COURSES</p>
                            <a href="@Url.Action("Enlist")" class="text-white"><i class="fa-regular fa-circle-xmark" style="font-size: 30px;"></i></a>
                        </div>
                        <div class="p-3">
                            <p class="fw-bold">Semester: 2ND</p>
                            <div class="row g-2">
                                <div class="col-6"><label for="program">Program</label></div>
                                <div class="col-6"><select class="form-select" id="program"></select></div>
                                <div class="col-6"><label for="Year">Year</label></div>
                                <div class="col-6"><select class="form-select" id="Year"></select></div>
                                <div class="col-6"><label for="Section">Section</label></div>
                                <div class="col-6"><select class="form-select" id="Section"></select></div>
                                <div class="col-6"><label for="course">Course Code</label></div>
                                <div class="col-6"><select class="form-select" id="course"></select></div>
                                <div class="col-6"><label for="courseName">Course Name</label></div>
                                <div class="col-6"><input type="text" class="form-control ms-1" style="border: 2px solid var(--main-color);"></div>
                            </div>
                            <div class="row g-2 mt-3">
                                <div class="col-6">
                                    <label for="Day">Day</label>
                                    <select class="form-select" id="Day"></select>
                                </div>
                                <div class="col-6">
                                    <label for="Units">Units</label>
                                    <input type="text" id="Units" class="form-control" style="border: 2px solid var(--main-color);">
                                </div>
                            </div>
                            <div class="row g-2 mt-3">
                                <div class="col-6">
                                    <label for="LEC">LEC</label>
                                    <select class="form-select" id="LEC"></select>
                                </div>
                                <div class="col-6">
                                    <label for="LAB">LAB</label>
                                    <select class="form-select" id="LAB"></select>
                                </div>
                            </div>
                            <div class="d-flex flex-column align-items-center gap-2 mt-4">
                                <a href="#" class="btn text-white black-on-hover" style="background-color: var(--main-color);">UPDATE</a>
                                <a href="#" class="btn text-white black-on-hover" style="background-color: var(--main-color);">DELETE</a>
                                <a href="#" class="btn text-black mainColorHover" style="border: 2px solid var(--main-color);">RESET</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
