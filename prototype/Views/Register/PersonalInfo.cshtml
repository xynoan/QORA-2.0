@{
    ViewData["Title"] = "- Register";
}

<div class="container" id="main-container">
    <div id="content-form" class="p-5 mt-3">
        <div class="progress" role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 40%"></div>
        </div>

        <h1 class="mt-3">Personal Information</h1>
        <hr class="divider" />

        <form asp-action="Education" method="post">
            <p class="fw-bold">Full Name</p>
            <div class="input-group d-flex flex-column personal-details-form">
                <input type="text" name="LastName" placeholder="Last Name" class="form-control w-100" />
                <input type="text" name="FirstName" placeholder="First Name" class="form-control w-100" />
                <input type="text" name="MiddleName" placeholder="Middle Name" class="form-control w-100" />
                <input type="text" name="Suffix" placeholder="Suffix" class="form-control w-100" />
            </div>

            <div class="mt-3 d-flex flex-column w-auto gap-3 background-info-form">
                <div class="d-flex flex-column">
                    <p class="fw-bold">Date of Birth</p>
                    <input type="date" name="DateOfBirth" class="form-control" />
                </div>
                <div class="d-flex flex-column">
                    <p class="fw-bold">Birth Place</p>
                    <input type="text" name="BirthPlace" placeholder="Select Place" class="form-control" />
                </div>
                <div class="d-flex flex-column">
                    <p class="fw-bold">Gender</p>
                    <select class="form-select" name="Gender">
                        <option selected>Select One</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="LGBTQIA+">LGBTQIA+</option>
                    </select>
                </div>
            </div>

            <div class="mt-3 d-flex flex-column background-info-form">
                <div class="d-flex flex-column">
                    <p class="fw-bold">Religion</p>
                    <select class="form-select" name="Religion">
                        <option selected>Select One</option>
                        <option value="Catholic">Catholic</option>
                        <option value="Muslim">Muslim</option>
                        <option value="Christian">Christian</option>
                        <option value="Buddhist">Buddhist</option>
                        <!-- Add other options as needed -->
                    </select>
                </div>
                <div class="d-flex flex-column">
                    <p class="fw-bold">Citizenship</p>
                    <input type="text" name="Citizenship" class="form-control" />
                </div>
                <div class="d-flex flex-column">
                    <p class="fw-bold">Civil Status</p>
                    <select class="form-select" name="CivilStatus">
                        <option selected>Select One</option>
                        <option value="Single">Single</option>
                        <option value="Married">Married</option>
                        <option value="Divorced">Divorced</option>
                        <option value="Widowed">Widowed</option>
                    </select>
                </div>
            </div>

            <p class="fw-bold mt-3">Present Address</p>
            <div class="input-group d-flex flex-column personal-details-form">
                <input type="text" name="HouseStreet" placeholder="House No./Street" class="form-control w-100" />
                <input type="text" name="Barangay" placeholder="Barangay" class="form-control w-100" />
                <input type="text" name="Municipality" placeholder="Municipality" class="form-control w-100" />
                <input type="text" name="District" placeholder="District" class="form-control w-100" />
                <input type="text" name="ZipCode" placeholder="Zip Code" class="form-control w-100" />
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button class="btn next text-white" id="previousButton" type="button"><i class="fa-solid fa-chevron-left"></i> Previous</button>
                <button class="btn next text-white" type="submit">Next <i class="fa-solid fa-chevron-right"></i></button>
            </div>
        </form>
    </div>
</div>
