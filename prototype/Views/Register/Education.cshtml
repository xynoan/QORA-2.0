    @{
        ViewData["Title"] = "- Register";
    }

<div class="container" id="main-container">
    <div id="content-form" class="p-5 mt-3">
        <div>
            <ul class="progressbar">
                <li class="active"><a style="color:black;">Basic Information</a></li>
                <li class="active"><a style="color:black;">Personal Information</a></li>
                <li class="active"><a style="color:black;">Educational Attainment</a></li>
                <li><a style="color:black;">Family Background</a></li>
                <li><a style="color:black;">In Case Of Emegency</a></li>
            </ul>
        </div>

            <h1 class="mt-3">Educational Attainment</h1>
            <hr class="divider" />

        <form asp-action="Education" method="post">
            <p class="fw-bold"><label for="College">College (Leave it blank if you have not enrolled to college before)</label></p>
            <input type="text" name="COLLEGE_NAME" id="College" class="form-control mb-3" placeholder="Enter your School Name">
            <p class="fw-bold mt-3"><label for="address">School Address</label></p>
            <input type="text" name="C_ADDRESS" id="address" placeholder="Enter your School Address" class="form-control mb-3">

            <p class="fw-bold mb-0">Location</p>
            <div class="d-flex justify-content-between">
                <div style="width: 50%;">
                    <label for="location">Within Quezon City?</label>
                    <select class="form-select d-inline-block my-3" name="C_LOCATION" style="width: 65%;">
                        <option selected>Select Yes/No</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
                <div style="width: 50%;">
                    <label for="School">School Type</label>
                    <select class="form-select d-inline-block my-3" name="C_SCHOOL_TYPE" style="width: 80%;">
                        <option selected>Select Type</option>
                        <option value="Public">Public</option>
                        <option value="Private">Private</option>
                        <option value="Local">Local</option>
                    </select>
                </div>
            </div>
            <div class="mt-3 row row-cols-3">
                <div class="d-flex flex-column col">
                    <p class="fw-bold"><label for="course">Course</label></p>
                    <input type="text" name="C_COURSE_YR" id="course" class="form-control" placeholder="Enter your Course">
                </div>
                <div class="d-flex flex-column col">
                    <p class="fw-bold"><label for="graduated">Date Graduated</label></p>
                    <input type="date" name="C_DATE_GRADUATED" id="graduated" class="form-control">
                </div>
                <div class="d-flex flex-column col">
                    <p class="fw-bold"><label for="honors">Honors Received (With Certificate)</label></p>
                    <input type="text" name="C_HONORS_RECEIVED" id="honors" class="form-control" placeholder="i.e. Top 1, High Honors, etc. (Optional)">
                </div>
            </div>
            <hr class="divider">
            <p class="fw-bold"><label for="vocational">Technical Vocational (Leave it blank if you have not enrolled to vocational course before)</label></p>
            <input type="text" name="TECH_VOC_NAME" id="vocational" class="form-control" placeholder="Enter your School Name">
            <p class="fw-bold mt-3"><label for="addressVoc">School Address</label></p>
            <input type="text" name="TV_ADDRESS" id="addressVoc" class="form-control" placeholder="Enter your School Adress">
            <p class="fw-bold mt-3">Location</p>
            <div class="d-flex justify-content-between">
                <div style="width: 50%;">
                    <label for="locationVoc">Within Quezon City?</label>
                    <select class="form-select d-inline-block" name="TV_LOCATION" style="width: 65%;">
                        <option selected>Select One</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
                <div style="width: 50%;">
                    <label for="SchoolVoc">School Type</label>
                    <select class="form-select d-inline-block" name="TV_SCHOOL_TYPE" style="width: 80%;">
                        <option selected>Select One</option>
                        <option value="Public">Public</option>
                        <option value="Private">Private</option>
                        <option value="Local">Local</option>
                    </select>
                </div>
            </div>
            <div class="mt-3 row row-cols-3">
                <div class="d-flex flex-column col">
                    <p class="fw-bold"><label for="courseVocational">Course/Year/Taken</label></p>
                    <input type="text" name="TV_CURRICULUM" id="courseVocational" placeholder="Enter your Strand" class="form-control">
                </div>
                <div class="d-flex flex-column col">
                    <p class="fw-bold"><label for="graduatedVoc">Date Graduated</label></p>
                    <input type="date" name="TV_DATE_GRADUATED" id="graduatedVoc" class="form-control">
                </div>
                <div class="d-flex flex-column col">
                    <p class="fw-bold"><label for="honorsVoc">Honors Received (With Certificate)</label></p>
                    <input type="text" name="TV_HONORS_RECEIVED" id="honorsVoc" class="form-control" placeholder="i.e. Top 1, High Honors, etc. (Optional)">
                </div>
            </div>
            <hr class="divider">
            <p class="fw-bold"><label for="hs">Name of School (Senior High School or High School)</label></p>
            <input type="text" name="HIGH_SCHOOL_NAME" id="hs" class="form-control" placeholder="Enter your School Name" required
                   oninvalid="setCustomValidity('Enter The School Name.'); setInvalidBackground(this)"
                   oninput="setCustomValidity(''); setValidBackground(this)">
            <p class="fw-bold mt-3"><label for="addressHs">School Address</label></p>
            <input type="text" name="HS_ADDRESS" id="addressHs" placeholder="Enter your School Address" class="form-control" required
                   oninvalid="setCustomValidity('Enter The School Address.'); setInvalidBackground(this)"
                   oninput="setCustomValidity(''); setValidBackground(this)">
            <p class="fw-bold mt-3">Location</p>
            <div class="d-flex justify-content-between">
                <div style="width: 50%;">
                    <label for="locationHs">Within Quezon City?</label>
                    <select class="form-select d-inline-block" name="HS_LOCATION" id="locationHs" style="width: 65%;" required
                            oninvalid="setCustomValidity('Select Yes/No.'); setInvalidBackground(this)"
                            oninput="setCustomValidity(''); setValidBackground(this)">
                        <option selected value="" disabled>Select Yes/No</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
                <div style="width: 50%;">
                    <label for="SchoolHs">School Type</label>
                    <select class="form-select d-inline-block" name="HS_SCHOOL_TYPE" style="width: 80%;" required
                            oninvalid="setCustomValidity('Choose the School Type.'); setInvalidBackground(this)"
                            oninput="setCustomValidity(''); setValidBackground(this)">
                        <option selected value="" disabled>Select Type</option>
                        <option value="Public">Public</option>
                        <option value="Private">Private</option>
                        <option value="Local">Local</option>
                    </select>
                </div>
            </div>
            <div class="mt-3 row row-cols-3">
                <div class="d-flex flex-column col">
                    <p class="fw-bold"><label for="courseHs">Track/Strand</label></p>
                    <input type="text" name="HS_CURRICULUM" id="courseHs" class="form-control" placeholder="Enter your Strand" required
                           oninvalid="setCustomValidity('Enter The Track/Strand.'); setInvalidBackground(this)"
                           oninput="setCustomValidity(''); setValidBackground(this)">
                </div>
                <div class="d-flex flex-column col">
                    <p class="fw-bold"><label for="graduatedHs">Date Graduated</label></p>
                    <input type="date" name="HS_DATE_GRADUATE" id="graduatedHs" class="form-control" required
                           oninvalid="setCustomValidity('Enter The Date when you Graduated.'); setInvalidBackground(this)"
                           oninput="setCustomValidity(''); setValidBackground(this)">
                </div>
                <div class="d-flex flex-column col">
                    <p class="fw-bold"><label for="honorsHs">Honors Received (With Certificate)</label></p>
                    <input type="text" name="HS_HONORS_RECEIVED" id="honorsHs" class="form-control" placeholder="i.e. Top 1, High Honors, etc. (Optional)">
                </div>
            </div>

                <div class="d-flex justify-content-between mt-4">
                    <button class="btn next text-white" id="previousButton" type="button"><i class="fa-solid fa-chevron-left"></i> Previous</button>
                <button class="btn next text-white" type="submit" formnovalidate>Next <i class="fa-solid fa-chevron-right"></i></button>
                </div>
            </form>
        </div>
    </div>
