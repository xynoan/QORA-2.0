@{
    ViewBag.Title = "- Register";
}

<div class="container" id="main-container">
    <div id="content-form" class="p-5 mt-3">
        <div class="progress" role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 100%"></div>
        </div>
        <h1 class="mt-3">Person to be notified in case of Emergency</h1>
        <hr class="divider">
        <form asp-action="Create" method="post">
            <p class="fw-bold">Full Name</p>
            <div class="input-group d-flex flex-column name-input-group">
                <input type="text" name="" id="" placeholder="Last Name" class="form-control w-100">
                <input type="text" name="" id="" placeholder="First Name" class="form-control w-100">
                <input type="text" name="" id="" placeholder="Middle Name" class="form-control w-100">
                <input type="text" name="" id="" placeholder="Suffix" class="form-control w-100">
            </div>
            <div class="d-flex justify-content-between personal-info-group flex-column">
                <div>
                    <label for="Relationship" class="fw-bold my-3">Relationship</label>
                    <input type="text" name="" id="Relationship" class="form-control">
                </div>
                <div>
                    <label for="Contact" class="fw-bold my-3">Contact Number</label>
                    <input type="text" name="" id="Contact" class="form-control">
                </div>
            </div>
            <p class="fw-bold mt-3">Address</p>
            <div class="input-group d-flex flex-column name-input-group">
                <input type="text" name="" id="" placeholder="House No./Street" class="form-control w-100">
                <input type="text" name="" id="" placeholder="Barangay" class="form-control w-100">
                <input type="text" name="" id="" placeholder="Municipality" class="form-control w-100">
                <input type="text" name="" id="" placeholder="District" class="form-control w-100">
                <input type="text" name="" id="" placeholder="Zip Code" class="form-control w-100">
            </div>
            <div class="d-flex justify-content-between mt-4">
                <button class="btn next text-white" id="previousButton" type="button"><i class="fa-solid fa-chevron-left"></i> Previous</button>
                <button class="btn next text-white" type="submit">Next <i class="fa-solid fa-chevron-right"></i></button>
            </div>
        </form>
    </div>
</div>