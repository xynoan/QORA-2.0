<script>
    $(window).scroll(function () {
        var windowTop = $(window).scrollTop();
        var docheight = $(document).height();
        var winheight = $(window).height();

        var scrolled = (windowTop / (docheight - winheight)) * 100;

        $('.scroll-line').css('width', (scrolled + '%'));
    });

    function toggleMenu() {
        // Define your toggle functionality here
        $('#hamburgerNav').slideToggle(); // Example of toggle behavior
    }
</script>
<script>

    // Get the scroll-to-top button
    const mybutton = document.getElementById("scrolltopbtn");

    // Show or hide the button based on scroll position
    window.onscroll = function () {
        scrollFunction();
    };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            mybutton.style.display = "block";
        } else {
            mybutton.style.display = "none";
        }
    }

    // Scroll to the top of the document with smooth behavior
    function topFunction() {
        window.scrollTo({ top: 0, behavior: "smooth" });
    }
</script>