@await Html.PartialAsync("_Internet")

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quezon City University @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/prototype.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/images/letter-Q.png" type="image/png" />

    <!-- Allow individual views to inject their own styles -->
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        @await Html.PartialAsync("_Header")
    </header>

    <main role="main" class="pb-3">
        @RenderBody()

    </main>

    @await Html.PartialAsync("_Footer")

        <div class="scroll-line"></div>
    <button onclick="topFunction()" id="scrolltopbtn" title="Go to top">
        <img src="@Url.Content("~/images/up_icon.png")" height="100%" width="80px">
    </button>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/877d2cecdc.js" crossorigin="anonymous"></script>
       <script>
        $(window).scroll(function () {
            var windowTop = $(window).scrollTop();
            var docheight = $(document).height();
            var winheight = $(window).height();

            var scrolled = (windowTop / (docheight - winheight)) * 100;
            $('.scroll-line').css('width', (scrolled + '%'));
        });
    </script>
    <!-- Allow individual views to inject their own scripts -->
    @RenderSection("Scripts", required: false)

    <!-- Support additional custom scripts -->
    @RenderSection("CustomScripts", required: false)

</body>
</html>
<script>

    // Get the scroll-to-top button
    const mybutton = document.getElementById("scrolltopbtn");

    // Show or hide the button based on scroll position
    window.onscroll = function () {
        scrollFunction();
    };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            mybutton.style.display = "block";
        } else {
            mybutton.style.display = "none";
        }
    }

    // Scroll to the top of the document with smooth behavior
    function topFunction() {
        window.scrollTo({ top: 0, behavior: "smooth" });
    }

</script>