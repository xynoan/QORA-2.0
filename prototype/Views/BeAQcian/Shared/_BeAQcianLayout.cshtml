<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/prototype.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/images/letter-Q.png" type="image/png" />

    <title>Quezon City University - @ViewBag.Title</title>

    <!-- Render the Styles section if defined -->
    @RenderSection("Styles", required: false) <!-- Ensure this is present to render styles from views -->

    <style>
        /* Common styles for all pages */
        main {
            margin-top: 100px;
        }

        .fa-arrow-rotate-left:hover {
            transition: background-color 0.5s, color 0.5s;
            background-color: black;
            color: white !important;
        }

        h1#subHeading {
            background-color: var(--main-color);
            margin-bottom: 0;
            padding: 15px 15px 15px 40px;
        }

        .back {
            display: none;
            text-align: center;
        }

        @@media (min-width: 768px) {
            main {
                margin-top: 170px;
            }

            .back {
                display: block;
            }
        }
    </style>
</head>

<body>
    <!-- Shared header -->
    @await Html.PartialAsync("_Header")

    <!-- Main content from the child view -->
    <main class="container d-flex">
        <a href="@Url.Action("Index", "Home")" class="back me-5">
            <i class="fa-solid fa-arrow-rotate-left p-2 text-black"></i>
        </a>
        @RenderBody()
    </main>

    <!-- Shared footer -->
    @await Html.PartialAsync("_Footer")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/877d2cecdc.js" crossorigin="anonymous"></script>

    <!-- Scripts -->
    <script src="~/js/site.js"></script>
</body>
</html>
