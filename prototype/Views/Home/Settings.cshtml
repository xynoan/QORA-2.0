@{
    ViewBag.Title = "- Settings";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container" id="main-container">
    <div id="content-form" class="p-4 mt-3">
        @await Html.PartialAsync("_LogoutModal")
        <h1 class="mt-3 fs-3">PROFILE</h1>
        <p>Update your photo and password here.</p>
        <hr class="divider">

        <!-- Profile Picture Section -->
        <div class="d-flex flex-column flex-md-row gap-4 align-items-center">
            <img src="/images/iu.jpg" alt="IU" height="100px" class="rounded-4" style="border: 2px solid var(--main-color);">
            <div>
                <p class="fw-bold fs-5">Profile Picture</p>
                <div class="d-flex flex-column gap-3">
                    <a href="#" class="text-decoration-none text-white p-2 rounded-3" style="background: var(--main-color);">
                        <i class="fa-solid fa-upload"></i> Upload Image
                    </a>
                    <a href="#" class="text-decoration-none text-black border border-black p-2 rounded-3">
                        <i class="fa-solid fa-trash-can"></i> Remove
                    </a>
                </div>
                <p class="mt-2">We support PNGs, JPEGs and GIFs under 100MB</p>
            </div>
        </div>

        <!-- Full Name and Email Section with Full Width -->
        <div class="d-flex flex-column gap-4 mb-3" style="width: 100%;">
            <div class="input-group d-flex flex-column w-100">
                <p class="fw-bold m-0">Full Name:</p>
                <input type="text" class="form-control w-100" disabled>
            </div>
            <div class="input-group d-flex flex-column w-100">
                <p class="fw-bold m-0">Email:</p>
                <input type="text" class="form-control w-100" disabled>
            </div>
        </div>

        <!-- Change Password Section -->
        <p class="fw-bold">Change Password</p>
        <div class="d-flex flex-column flex-md-row gap-4">
            <div class="w-100">
                <div class="input-group d-flex align-items-center mb-2">
                    <label for="oldPassword" class="me-2">Old Password:</label>
                    <input type="password" id="oldPassword" class="form-control">
                </div>
                <div class="input-group d-flex align-items-center mb-2">
                    <label for="newPassword" class="me-2">New Password:</label>
                    <input type="password" id="newPassword" class="form-control">
                </div>
                <div class="input-group d-flex align-items-center mb-2">
                    <label for="confirmPassword" class="me-2">Confirm New Password:</label>
                    <input type="password" id="confirmPassword" class="form-control">
                </div>
            </div>
            <a href="@Url.Action("Forgot", "Login")" class="text-black forgotPassword mt-2 mt-md-0">Forgot Password</a>
        </div>

        <!-- Save and Cancel Buttons -->
        <div class="mt-4 d-flex gap-3 flex-column flex-md-row justify-content-md-end">
            <a href="#" onclick="toggleSave()" class="text-decoration-none text-white p-3 rounded-4" style="background-color: var(--main-color);" id="save">Save Changes</a>
            <a href="@Url.Action("Index", "Home")" class="cancel text-decoration-none border border-black p-3 rounded-4 text-black">Cancel</a>
        </div>
    </div>
</div>
