<script>
    document.addEventListener("DOMContentLoaded", () => {
        const countdownSpan = document.getElementById("countdown");
        let count = 1;
        const interval = setInterval(() => {
            countdownSpan.textContent = count + " ";
            count++;
            if (count > 30) {
                clearInterval(interval);
            }
        }, 25);
    });
</script>